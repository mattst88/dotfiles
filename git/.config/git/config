	default = simple
[alias]
	fixes = show -s --pretty='format:Fixes: %h (\"%s\")'
	co = checkout
	cp = cherry-pick
	br = branch
	shwo = show
	grpe = grep
	lgo = log
	last-commit-to = log -n 1 --pretty=format:%H
